{
    "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
    "productName": "NestHelper",
    "version": "1.0.0",
    "identifier": "dev.atomtables.NestHelper",
    "build": {
        "frontendDist": "../build",
        "devUrl": "http://localhost:5173",
        "beforeDevCommand": "pnpm run dev",
        "beforeBuildCommand": "pnpm run build"
    },
    "app": {
        "windows": [
            {
                "title": "NestHelper",
                "width": 1280,
                "height": 720,
                "resizable": true,
                "fullscreen": false,
                "titleBarStyle": "Overlay",
                "hiddenTitle": true,
                "trafficLightPosition": { "x": 18, "y": 16.5 }
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
        "resources": ["assets/"]
    }
}
